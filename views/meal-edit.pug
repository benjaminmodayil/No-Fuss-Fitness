extends layout

block content
  main.flex-grow
    .wrapper.px-4.container.max-w-2xl.mx-auto
      h1 #{title}
      form.form(action=`/meals/edit/${id}` method="POST")
        label(for="id").hidden
        input(type="text" name="id" value=`${id}`).hidden
        label.block.screenreader-only(for="title") Title
        input#title.block(type="text" name="title" value="Title" placeholder="name" required="" autocomplete="off" aria-required="true")
        label.block.screenreader-only(for="calories" autocomplete="off") Calories
        input#calories.block(type="text" name="calories" placeholder="0")
        label.block.screenreader-only(for="date" value=dateValue) Date
        input#date.block(type="date" name="date")
        button meal +